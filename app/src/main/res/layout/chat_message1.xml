<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"


        android:src="@drawable/al"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/chat_sender"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
       android:layout_toRightOf="@+id/profile"
        android:background="@drawable/bg_chat_sender"
        android:maxWidth="150dp"
        android:padding="10dp"
        android:text=" Sender bbhjhuihjjhjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjj"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/chat_reciever"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/chat_sender"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_chat_reciever"
        android:maxWidth="150dp"
        android:padding="10dp"
        android:text="Hello i am fffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        android:textColor="#ffffff"

        />

</RelativeLayout>